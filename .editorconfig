root = true

[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
[*.cs}]
charset = utf-8
indent_style = tab
trim_trailing_whitespace = true
csharp_new_line_before_open_brace = all

[*.{xaml,js,jsx,html,sass}]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false
