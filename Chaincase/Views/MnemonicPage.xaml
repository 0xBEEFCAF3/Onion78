<?xml version="1.0" encoding="UTF-8"?>
<rxui:ReactiveContentPage
    x:Class="Chaincase.Views.MnemonicPage"
    x:TypeArguments="vm:MnemonicViewModel"          
    xmlns:vm="clr-namespace:Chaincase.ViewModels;assembly=Chaincase"
    xmlns:rxui="clr-namespace:ReactiveUI.XamForms;assembly=ReactiveUI.XamForms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns="http://xamarin.com/schemas/2014/forms">
    <StackLayout Margin="10,35,10,10">
        <Label Text="Deterministic Seed (Mnemonic)"
               HorizontalOptions="Center"
               FontAttributes="Bold" />
        <Label Text="{Binding MnemonicString}"
               />
        <Label Text="Write this down. Your keys are generated from this and your passphrase together." />
        <Button Text="Submit"
                    Command="{Binding AcceptCommand}" />
    </StackLayout>
</rxui:ReactiveContentPage>
