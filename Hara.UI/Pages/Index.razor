@page "/"
@using Hara.UI.Services

@inject UIStateService UiStateService
@inject NavigationManager NavigationManager

 @*put wallet info button in navbar*@ 
<ion-content class="ion-padding">
    <h1>[BTC Balance]</h1>
    <h4>[USD Balance]</h4>
    <p>Tor running 2 peers Ready</p>
    <ion-progress-bar color="primary" />


    <p>First sync may be a few minutes.</p>
    <ion-button expand="block"
                href="newpassword"
                @onclick='() => NavigationManager.NavigateTo("newpassword")'
                @onclick:preventDefault="true">
        DON'T FORGET TO MAKE A BACKUP
    </ion-button>
    <ion-button expand="block"
                href="receive"
                @onclick='() => NavigationManager.NavigateTo("receive")'
                @onclick:preventDefault="true">
        GET RECEIVE ADDRESS
    </ion-button>
    <ion-button expand="block">COINJOIN</ion-button>
    <ion-button expand="block"
                href="send"
                @onclick='() => NavigationManager.NavigateTo("send")'
                @onclick:preventDefault="true">SEND</ion-button>
</ion-content>

@code{


    protected override void OnInitialized()
    {
        UiStateService.Title = "Chaincase";
        base.OnInitialized();
    }

}
