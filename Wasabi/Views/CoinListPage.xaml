<?xml version="1.0" encoding="UTF-8"?>
<rxui:ReactiveContentPage
    x:Class="Wasabi.Views.CoinListPage"
    x:TypeArguments="vm:CoinListViewModel"       
    xmlns:vm="clr-namespace:Wasabi.ViewModels;assembly=Wasabi"
    xmlns:rxui="clr-namespace:ReactiveUI.XamForms;assembly=ReactiveUI.XamForms"
    xmlns:templates="clr-namespace:Wasabi.Views.Templates;assembly=Wasabi"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns="http://xamarin.com/schemas/2014/forms">
    <ScrollView>
        <StackLayout>
            <!-- ADDRESSES -->
            <StackLayout>
            <Button Text="Back"
                 Command="{Binding BackCommand}" />
            </StackLayout>
            <Label Text="{Binding Coins.Count, StringFormat='There are {0} items'}" />
            <ListView  
                ItemsSource="{Binding Coins}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <templates:CoinViewTemplate />
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ScrollView>
    
</rxui:ReactiveContentPage>
