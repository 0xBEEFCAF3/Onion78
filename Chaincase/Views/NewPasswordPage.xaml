<?xml version="1.0" encoding="utf-8"?>
<rxui:ReactiveContentPage x:Class="Chaincase.Views.NewPasswordPage"
                          x:TypeArguments="vm:NewPasswordViewModel"
                          xmlns:vm="clr-namespace:Chaincase.ViewModels;assembly=Chaincase"
                          xmlns:rxui="clr-namespace:ReactiveUI.XamForms;assembly=ReactiveUI.XamForms"
                          xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                          xmlns="http://xamarin.com/schemas/2014/forms"
                          Title="Create Wallet">
  <StackLayout>
    <Label Text="Set your password" />
    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="*" />
      </Grid.ColumnDefinitions>
      <Entry x:Name="Password"
              IsPassword="true"
              Grid.Column="0" Grid.ColumnSpan="2"/>
      <Label x:Name="ShowLabel" Text="SHOW" Padding="0,0,10,0" HorizontalOptions="End" VerticalOptions="Center" Grid.Column="1">
      <Label.GestureRecognizers>
        <TapGestureRecognizer Tapped="ShowPass" NumberOfTapsRequired="1" />
      </Label.GestureRecognizers>
    </Label>
      </Grid>
      <Label Text="A password keeps your bitcoin keys safe. Make sure to back it up. Forget password → no spend!" />
    <Button x:Name="Submit"
            Text="Next"
            VerticalOptions="EndAndExpand"/>
  </StackLayout>
</rxui:ReactiveContentPage>
