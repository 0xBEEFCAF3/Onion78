@page "/send/sent"
@using Chaincase.Common.Contracts
@using Chaincase.UI.Services
@inject UIStateService UiStateService
@inject NavigationManager NavigationManager

<ion-content class="ion-padding">
    <ion-icon name="paper-plane-outline"></ion-icon>
    <h1>Transaction sent</h1>
    <p>It usually takes about 30 minutes for a transaction to be finalized.</p>
   

    <ion-button href="/" @onclick='() => NavigationManager.NavigateTo("/")' @onclick:preventDefault="true" expand="block">DONE</ion-button>>
</ion-content>

@code {

    protected override void OnInitialized()
    {
        UiStateService.Title = "SEND";
    }

}
