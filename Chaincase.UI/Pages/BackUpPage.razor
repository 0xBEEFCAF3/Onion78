@page "/backup/words"
@using Chaincase.UI.Services
@inject UIStateService UiStateService
@inject NavigationManager NavigationManager

<ion-content class="ion-padding">
    <h1>BACK UP</h1>
    <p>Be sure to write each word as shown and on paper. We will verify you got them after.</p>
    <ion-slides style="height:50%;" pager="true">
        @foreach (string word in Words)
        {
            <ion-slide>
                <h1>@word</h1>
            </ion-slide>
        }
    </ion-slides>

    <IonButton href="/backup/verify" expand="block">VERIFY</IonButton>

</ion-content>

@code {

    string[] Words = { "a", "b", "c", "d", "e", "f", "g", "8", "9", "10", "11", "12" };

    protected override void OnInitialized()
    {
        UiStateService.Title = "BACK UP";
    }

}
