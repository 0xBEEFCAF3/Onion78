<?xml version="1.0" encoding="UTF-8"?>
<rxui:ReactiveContentPage x:Class="Chaincase.Views.LandingPage"
                          x:TypeArguments="vm:LandingViewModel"
                          xmlns:vm="clr-namespace:Chaincase.ViewModels;assembly=Chaincase"
                          xmlns:rxui="clr-namespace:ReactiveUI.XamForms;assembly=ReactiveUI.XamForms"
                          xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                          xmlns="http://xamarin.com/schemas/2014/forms"
                          Title="Chaincase">

  <StackLayout Spacing="0" Padding="10,40,10,40">
    <Label Text="Chaincase"
           HorizontalOptions="FillAndExpand" />
    <Label Text="The easy, private, way to Bitcoin"
           HorizontalOptions="FillAndExpand" />
    <Button Text="New Wallet >"
            x:Name="NewWalletButton"
            VerticalOptions="EndAndExpand"/>
    <!-- Button Text="Recover Wallet >"
            x:Name="RecoverWalletButton" /-->
  </StackLayout>
</rxui:ReactiveContentPage>

