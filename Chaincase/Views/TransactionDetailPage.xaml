<?xml version="1.0" encoding="UTF-8"?>
<rxui:ReactiveContentPage x:Class="Chaincase.Views.TransactionDetailPage"
                          x:TypeArguments="vm:TransactionViewModel"
                          xmlns:vm="clr-namespace:Chaincase.ViewModels;assembly=Chaincase"
                          xmlns:rxui="clr-namespace:ReactiveUI.XamForms;assembly=ReactiveUI.XamForms"
                          xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                          xmlns="http://xamarin.com/schemas/2014/forms"
                          Title="Transaction Details">
  <StackLayout>
    <Label x:Name="AmountBtc"/>

    <Label Text="Transaction ID:"/>
    <Label x:Name="TransactionId"/>

    <Label x:Name="Date"/>

    <Label x:Name="BlockHeight"/>

    <Label x:Name="Confirmed"/>

    <Label x:Name="Confirmations"/>
  </StackLayout>
</rxui:ReactiveContentPage>
