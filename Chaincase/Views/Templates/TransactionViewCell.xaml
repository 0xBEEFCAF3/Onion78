<?xml version="1.0" encoding="UTF-8"?>
<rxui:ReactiveViewCell x:Class="Chaincase.Views.Templates.TransactionViewCell"
                          x:TypeArguments="vm:TransactionViewModel"
                          xmlns:vm="clr-namespace:Chaincase.ViewModels;assembly=Chaincase"
                          xmlns:rxui="clr-namespace:ReactiveUI.XamForms;assembly=ReactiveUI.XamForms"
                          xmlns:templates="clr-namespace:Chaincase.Views.Templates;assembly=Chaincase"
                          xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                          xmlns="http://xamarin.com/schemas/2014/forms">
  <Grid x:Name="txCell">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="3*" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="1" />
    </Grid.RowDefinitions>
    <Label x:Name="Label"
           LineBreakMode="TailTruncation"
           VerticalOptions="Center"
           Grid.ColumnSpan="2"/>
    <Label x:Name="AmountBtc"
           HorizontalOptions="EndAndExpand"
           VerticalOptions="Center"
           Grid.Column="1"/>
    <BoxView HeightRequest="1"
             Color="WhiteSmoke"
             Grid.Row="1"
             Grid.Column="0"
             Grid.ColumnSpan="2"
             VerticalOptions="End"  HorizontalOptions="FillAndExpand"/>
  </Grid>

</rxui:ReactiveViewCell>
