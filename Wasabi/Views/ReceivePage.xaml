<?xml version="1.0" encoding="UTF-8"?>
<rxui:ReactiveContentPage
    x:Class="Wasabi.Views.ReceivePage"
    x:TypeArguments="vm:ReceiveViewModel"          
    xmlns:vm="clr-namespace:Wasabi.ViewModels;assembly=Wasabi"
    xmlns:rxui="clr-namespace:ReactiveUI.XamForms;assembly=ReactiveUI.XamForms"
    xmlns:templates="clr-namespace:Wasabi.Views.Templates;assembly=Wasabi"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns="http://xamarin.com/schemas/2014/forms">
    <ScrollView>
        <StackLayout>
            <!-- ADDRESSES -->
            <StackLayout>
            <Button Text="Back"
                    Command="{Binding BackCommand}" />
            <Entry Text="{Binding Label}"
               Placeholder="something unique"
               />
            <Button Text="New Address"
                    Command="{Binding GenerateCommand}" />
            </StackLayout>
            <ListView  
                ItemsSource="{Binding Addresses}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <templates:AddressTemplate />
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ScrollView>
</rxui:ReactiveContentPage>
