<?xml version="1.0" encoding="UTF-8"?>
<rxui:ReactiveContentPage x:Class="Chaincase.Views.LandingPage"
                          x:TypeArguments="vm:LandingViewModel"
                          xmlns:vm="clr-namespace:Chaincase.ViewModels;assembly=Chaincase"
                          xmlns:rxui="clr-namespace:ReactiveUI.XamForms;assembly=ReactiveUI.XamForms"
                          xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                          xmlns="http://xamarin.com/schemas/2014/forms"
                          Title="Chaincase">

  <Grid>
    <Grid.RowDefinitions>
        <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    <Image Source="logo_vertical.png"
           VerticalOptions="Center"
           HorizontalOptions="Center"
           Margin="0,0,0,172" />

    <Label Text="PRIVATE BY DESIGN"
           FontAttributes="Bold"
           VerticalOptions="Center"
           HorizontalTextAlignment="Center" />


    <Button Text="New Wallet >"
            x:Name="NewWalletButton"
            VerticalOptions="EndAndExpand"/>
    <!-- Button Text="Recover Wallet >"
            x:Name="RecoverWalletButton" /-->
  </Grid>
</rxui:ReactiveContentPage>

