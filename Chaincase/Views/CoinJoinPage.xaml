<?xml version="1.0" encoding="utf-8"?>
<rxui:ReactiveContentPage x:Class="Chaincase.Views.CoinJoinPage"
                          x:TypeArguments="vm:CoinJoinViewModel"
                          xmlns:vm="clr-namespace:Chaincase.ViewModels;assembly=Chaincase"
                          xmlns:rxui="clr-namespace:ReactiveUI.XamForms;assembly=ReactiveUI.XamForms"
                          xmlns:templates="clr-namespace:Chaincase.Views.Templates;assembly=Chaincase"
                          xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                          xmlns="http://xamarin.com/schemas/2014/forms">
  <StackLayout x:Name="Stackk">
    <Label x:Name="Balance"
           FontAttributes="Bold" />
    <templates:CoinListTemplate x:Name="CoinList"
                                VerticalOptions="FillAndExpand" />
    <Label Text="{Binding RequiredBTC, StringFormat='You will get {0} private coin'}" />
    <Label Text="{Binding RequiredPeerCount, StringFormat='exchanged with at least {0} peers'}" />
    <Label Text="{Binding CoordinatorFeePercent, StringFormat='for the low price of {0}'}" />

    <Button Text="Confirm"
            x:Name="ConfirmButton"
            VerticalOptions="End" />
  </StackLayout>
</rxui:ReactiveContentPage>
