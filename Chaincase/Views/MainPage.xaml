<?xml version="1.0" encoding="utf-8"?>
<rxui:ReactiveContentPage x:Class="Chaincase.Views.MainPage"
                          x:TypeArguments="vm:MainViewModel"
                          xmlns:vm="clr-namespace:Chaincase.ViewModels;assembly=Chaincase"
                          xmlns:rxui="clr-namespace:ReactiveUI.XamForms;assembly=ReactiveUI.XamForms"
                          xmlns:templates="clr-namespace:Chaincase.Views.Templates;assembly=Chaincase"
                          xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                          xmlns="http://xamarin.com/schemas/2014/forms">
  <StackLayout x:Name="Stackk">
    <Label x:Name="Balance"
           FontAttributes="Bold" />
    <templates:CoinListTemplate x:Name="CoinList"
                                VerticalOptions="FillAndExpand" />
    <Button Text="Receive"
            x:Name="NavReceiveCommand"
            VerticalOptions="End"/>
    <Button Text="Go Private"
            x:Name="GoPrivateButton"
            Clicked="ShowCoinJoinStatus"
            VerticalOptions="End"/>
    <Button Text="Non-private Send"
            x:Name="NavSendCommand"
            VerticalOptions="End"/>
    <Label x:Name="Deq" />
  </StackLayout>
</rxui:ReactiveContentPage>