<?xml version="1.0" encoding="UTF-8"?>
<rxui:ReactiveContentPage x:Class="Chaincase.Views.WalletInfoPage"
                          x:TypeArguments="vm:WalletInfoViewModel"
                          xmlns:vm="clr-namespace:Chaincase.ViewModels;assembly=Chaincase"
                          xmlns:rxui="clr-namespace:ReactiveUI.XamForms;assembly=ReactiveUI.XamForms"
                          xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                          xmlns="http://xamarin.com/schemas/2014/forms"
                          xmlns:controls="clr-namespace:Chaincase.Controls"
                          Title="Wallet Info">
  <StackLayout>
    <Label Text="Account Key Path:"
           FontAttributes="Bold"/>
    <Label x:Name="AccountKeyPathLabel"/>
    <Label Text="Extended Public Key:"
          FontAttributes="Bold"/>
    <Label x:Name="ExtendedAccountPublicKeyLabel"/>
    <controls:NeuButton Text="BACK UP WALLET"
        x:Name="BackUpButton"
        VerticalOptions="End" />
    <controls:NeuButton Text="SHARE DEBUG LOG"
        x:Name="ShareLogsButton"
        VerticalOptions="End" />
    <controls:NeuButton Text="EXPORT WALLET FILE"
        x:Name="ExportWalletButton"
        VerticalOptions="End" />
  </StackLayout>
</rxui:ReactiveContentPage>
