<?xml version="1.0" encoding="UTF-8"?>
<rxui:ReactiveContentPage x:Class="Chaincase.Views.LandingPage"
                          x:TypeArguments="vm:LandingViewModel"
                          xmlns:vm="clr-namespace:Chaincase.ViewModels;assembly=Chaincase"
                          xmlns:rxui="clr-namespace:ReactiveUI.XamForms;assembly=ReactiveUI.XamForms"
                          xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                          xmlns="http://xamarin.com/schemas/2014/forms"
                          xmlns:controls="clr-namespace:Chaincase.Controls"
                          NavigationPage.HasNavigationBar="false">

  <StackLayout
     VerticalOptions="Center">
    <Image Source="logo_vertical.png"
           VerticalOptions="Center"
           HorizontalOptions="Center"/>

    <Label Text="PRIVATE BY DESIGN"
           FontAttributes="Bold"
           VerticalOptions="Center"
           HorizontalTextAlignment="Center"
           Margin="0,24,0,60"/>


    <controls:NeuButton Text="NEW WALLET"
            x:Name="NewWalletButton"
            VerticalOptions="Center"/>
    <controls:NeuButton Text="LOAD WALLET"
            x:Name="LoadWalletButton"/>
  </StackLayout>
</rxui:ReactiveContentPage>

