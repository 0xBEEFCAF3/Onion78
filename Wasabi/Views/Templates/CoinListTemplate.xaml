<?xml version="1.0" encoding="UTF-8"?>
<rxui:ReactiveContentView
    x:Class="Wasabi.Views.Templates.CoinListTemplate"
    x:TypeArguments="vm:CoinListViewModel"       
    xmlns:vm="clr-namespace:Wasabi.ViewModels;assembly=Wasabi"
    xmlns:rxui="clr-namespace:ReactiveUI.XamForms;assembly=ReactiveUI.XamForms"
    xmlns:templates="clr-namespace:Wasabi.Views.Templates;assembly=Wasabi"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns="http://xamarin.com/schemas/2014/forms">
    <ListView x:Name="Coins"
                Header="Coins">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <templates:CoinViewTemplate ViewModel="{Binding .}" />
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</rxui:ReactiveContentView>
