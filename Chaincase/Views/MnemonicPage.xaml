<?xml version="1.0" encoding="UTF-8"?>
<rxui:ReactiveContentPage x:Class="Chaincase.Views.MnemonicPage"
                          x:TypeArguments="vm:MnemonicViewModel"
                          xmlns:vm="clr-namespace:Chaincase.ViewModels;assembly=Chaincase"
                          xmlns:rxui="clr-namespace:ReactiveUI.XamForms;assembly=ReactiveUI.XamForms"
                          xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                          xmlns="http://xamarin.com/schemas/2014/forms"
                          xmlns:controls="clr-namespace:Chaincase.Controls"
                          Title="Create Wallet">
  <StackLayout>
    <Label Text="Write down these 12 words"
           FontAttributes="Bold"/>
    <Label x:Name="Mnemonic" BackgroundColor="WhiteSmoke"/>
    <Label Text="You can recover your wallet on any computer with BOTH:"
      />
    <Label Text="1. These words" />
    <Label Text="2. Your password" />
    <controls:NeuButton Text="I wrote down my seed words"
            x:Name="Accept"
            VerticalOptions="EndAndExpand"
            TextColor="IndianRed" />
  </StackLayout>
</rxui:ReactiveContentPage>
