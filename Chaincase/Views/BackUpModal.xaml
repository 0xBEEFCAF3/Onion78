<?xml version="1.0" encoding="utf-8"?>
<rxui:ReactiveContentPage x:Class="Chaincase.Views.BackUpModal"
                          x:TypeArguments="vm:BackUpViewModel"
                          xmlns:vm="clr-namespace:Chaincase.ViewModels;assembly=Chaincase"
                          xmlns:rxui="clr-namespace:ReactiveUI.XamForms;assembly=ReactiveUI.XamForms"
                          xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                          xmlns="http://xamarin.com/schemas/2014/forms">
  <StackLayout
    VerticalOptions="CenterAndExpand"
    Margin="10,35,10,10">
    <Label Text="Back Up"
           FontAttributes="Bold" />
    <Label Text="Be sure to write your words down on a piece of paper" />
    <CarouselView x:Name="Carousel" ItemsSource="{Binding SeedWords}">
      <CarouselView.ItemTemplate>
        <DataTemplate>
            <StackLayout>
                <Label Text="{Binding .}" />
                <!--Label Text="{Binding Position}" -->
            </StackLayout>
        </DataTemplate>
       </CarouselView.ItemTemplate>
    </CarouselView>
    <Button x:Name="NextButton"
            Text="Next" />
  </StackLayout>
</rxui:ReactiveContentPage>

