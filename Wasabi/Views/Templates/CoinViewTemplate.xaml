<?xml version="1.0" encoding="UTF-8"?>
<rxui:ReactiveContentView
    x:Class="Wasabi.Views.Templates.CoinViewTemplate"
    x:TypeArguments="vm:CoinViewModel"          
    xmlns:vm="clr-namespace:Wasabi.ViewModels;assembly=Wasabi"
    xmlns:rxui="clr-namespace:ReactiveUI.XamForms;assembly=ReactiveUI.XamForms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns="http://xamarin.com/schemas/2014/forms">
    <Grid Margin="0,0,0,10"> 
        <Grid.ColumnDefinitions> 
            <ColumnDefinition Width="*" /> 
            <ColumnDefinition Width="Auto" /> 
        </Grid.ColumnDefinitions> 
        <Switch IsToggled="{Binding IsSelected}" />
        <StackLayout Grid.Column="1" >
            <Label x:Name="Amount" />
            <Label x:Name="AnonymitySet" />
            <Label x:Name="Clusters" />
        </StackLayout>
     </Grid>
</rxui:ReactiveContentView>
