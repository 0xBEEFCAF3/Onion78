<?xml version="1.0" encoding="utf-8"?>
<rxui:ReactiveContentPage x:Class="Chaincase.Views.MainPage"
                          x:TypeArguments="vm:MainViewModel"
                          xmlns:vm="clr-namespace:Chaincase.ViewModels;assembly=Chaincase"
                          xmlns:rxui="clr-namespace:ReactiveUI.XamForms;assembly=ReactiveUI.XamForms"
                          xmlns:templates="clr-namespace:Chaincase.Views.Templates;assembly=Chaincase"
                          xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                          xmlns="http://xamarin.com/schemas/2014/forms"
                          NavigationPage.HasBackButton="False"
                          Title="Chaincase">
  <StackLayout>
    <Label x:Name="Balance"
           FontAttributes="Bold" />
    <templates:StatusTemplate x:Name="Status" />
    <ListView x:Name="Transactions"
              SelectionMode="None"
              SeparatorVisibility="None">
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <templates:TransactionTemplate ViewModel="{Binding .}" />
          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
    <Button Text="Receive"
            x:Name="NavReceiveCommand"
            VerticalOptions="EndAndExpand" />
    <Button Text="CoinJoin"
            x:Name="CoinJoinButton"
            VerticalOptions="End" />
    <Button Text="Private Send"
            x:Name="PrivateSendButton"
            VerticalOptions="End" />
    <Button Text="Exposed Send"
            BorderWidth="0"
            x:Name="ExposedSendButton"
            VerticalOptions="End" />
  </StackLayout>
</rxui:ReactiveContentPage>