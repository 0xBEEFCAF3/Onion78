
<IonModal @bind-Visible="@Visible">
    <ion-header>
        <ion-toolbar>
            <ion-title>Authorize</ion-title>
            <ion-buttons slot="start">
                <IonButton @onclick="CloseModal">Back</IonButton>
            </ion-buttons>
        </ion-toolbar>
    </ion-header>
    <ion-content class="ion-padding">

        <PasswordPrompt SubmitPassword="SubmitPassword"></PasswordPrompt>

    </ion-content>
</IonModal>
    
@code {

    [Parameter]
    public bool Visible { get; set; }

    [Parameter]
    public EventCallback<bool> VisibleChanged { get; set; }

    [Parameter]
    public Action<string> SubmitPassword { get; set; }

    private void CloseModal()
    {
        Visible = false; 
    }
}
