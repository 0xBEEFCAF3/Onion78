<?xml version="1.0" encoding="UTF-8"?>
<rxui:ReactiveContentPage x:Class="Chaincase.Views.MnemonicPage"
                          x:TypeArguments="vm:MnemonicViewModel"
                          xmlns:vm="clr-namespace:Chaincase.ViewModels;assembly=Chaincase"
                          xmlns:rxui="clr-namespace:ReactiveUI.XamForms;assembly=ReactiveUI.XamForms"
                          xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                          xmlns="http://xamarin.com/schemas/2014/forms"
                          Title="Create Wallet">
  <StackLayout>
    <Label x:Name="Mnemonic" />
    <Label Text="Write down these words in order and keep them safe. If your device breaks or becomes corrupted, you have these words and know your password. BOTH of these pieces of information are necessary to find and spend your bitcoin." />
    <Button Text="I wrote down my seed words"
            x:Name="Accept"
            VerticalOptions="EndAndExpand"/>
  </StackLayout>
</rxui:ReactiveContentPage>
