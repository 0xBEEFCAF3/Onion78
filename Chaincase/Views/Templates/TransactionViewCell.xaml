<?xml version="1.0" encoding="UTF-8"?>
<rxui:ReactiveViewCell x:Class="Chaincase.Views.Templates.TransactionViewCell"
                          x:TypeArguments="vm:TransactionViewModel"
                          xmlns:vm="clr-namespace:Chaincase.ViewModels;assembly=Chaincase"
                          xmlns:rxui="clr-namespace:ReactiveUI.XamForms;assembly=ReactiveUI.XamForms"
                          xmlns:templates="clr-namespace:Chaincase.Views.Templates;assembly=Chaincase"
                          xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                          xmlns="http://xamarin.com/schemas/2014/forms">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="2.6*" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    <Label x:Name="DateTime"
           Padding="0,6,0,0"
           Grid.Column="0"
           Grid.Row="0" />
    <Label x:Name="TransactionId"
           Padding="0,0,0,6"
           Grid.Column="0"
           Grid.Row="1" />
    <Label x:Name="AmountBtc"
           Grid.Column="1"
           Grid.Row="0"
           Grid.RowSpan="2"
           HorizontalTextAlignment="End"
           VerticalOptions="Center" />
  </Grid>
</rxui:ReactiveViewCell>
