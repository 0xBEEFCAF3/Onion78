<?xml version="1.0" encoding="utf-8"?>
<rxui:ReactiveContentPage x:Class="Chaincase.Views.PasswordPage"
                          x:TypeArguments="vm:PasswordViewModel"
                          xmlns:vm="clr-namespace:Chaincase.ViewModels;assembly=Chaincase"
                          xmlns:rxui="clr-namespace:ReactiveUI.XamForms;assembly=ReactiveUI.XamForms"
                          xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                          xmlns="http://xamarin.com/schemas/2014/forms"
                          Title="Create Wallet">
  <StackLayout>
    <Label Text="Create Wallet" StyleClass="pageHeading" />
    <Label Text="Password" />
    <Entry x:Name="Password"
           IsPassword="true" />
    <Label Text="Pick a passphrase you know and will never forget. You need this to send." />
    <Button x:Name="Submit"
            Text="Next"
            VerticalOptions="EndAndExpand"/>
  </StackLayout>
</rxui:ReactiveContentPage>