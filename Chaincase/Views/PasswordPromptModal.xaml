<?xml version="1.0" encoding="utf-8"?>
<rxui:ReactiveContentPage x:Class="Chaincase.Views.PasswordPromptModal"
                          x:TypeArguments="vm:PasswordPromptViewModel"
                          xmlns:vm="clr-namespace:Chaincase.ViewModels;assembly=Chaincase"
                          xmlns:rxui="clr-namespace:ReactiveUI.XamForms;assembly=ReactiveUI.XamForms"
                          xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                          xmlns="http://xamarin.com/schemas/2014/forms"
                          xmlns:controls="clr-namespace:Chaincase.Controls">
  <StackLayout
    VerticalOptions="CenterAndExpand"
    Margin="10,35,10,10">
    <Label Text="Confirm Send"
           FontAttributes="Bold" />
    <Label Text="Enter the password for this wallet" />
    <Entry x:Name="Password"
           IsPassword="true"
           ClearButtonVisibility="WhileEditing" />
    <controls:NeuButton x:Name="AcceptButton" />
    <controls:NeuButton x:Name="CancelButton"
            Text="CANCEL" />
  </StackLayout>
</rxui:ReactiveContentPage>

