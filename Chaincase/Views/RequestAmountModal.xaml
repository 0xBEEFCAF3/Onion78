<?xml version="1.0" encoding="UTF-8"?>
<rxui:ReactiveContentPage x:Class="Chaincase.Views.RequestAmountModal"
                          x:TypeArguments="vm:RequestAmountViewModel"
                          xmlns:vm="clr-namespace:Chaincase.ViewModels;assembly=Chaincase"
                          xmlns:rxui="clr-namespace:ReactiveUI.XamForms;assembly=ReactiveUI.XamForms"
                          xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                          xmlns="http://xamarin.com/schemas/2014/forms"
                          xmlns:controls="clr-namespace:Chaincase.Controls">
  <StackLayout VerticalOptions="CenterAndExpand">
    <StackLayout Orientation="Horizontal">
      <Label Text="Amount ₿" HorizontalOptions="FillAndExpand" />
      <Entry x:Name="RequestAmountEntry" Keyboard="Numeric" WidthRequest="130" HorizontalTextAlignment="End"/>
    </StackLayout>
    <controls:NeuButton Text="CREATE"
        x:Name="CreateButton"/>
  </StackLayout>
</rxui:ReactiveContentPage>
