@page "/receive/address"
@using Chaincase.UI.Services
@inject UIStateService UiStateService
@inject NavigationManager NavigationManager

<ion-content class="ion-padding">
    <p style="width: 256px; height: 256px; margin: auto">
        <QRCode Data="http://gozo.com"></QRCode>
    </p>

    <p>[label(s)]</p>
    <ion-label>Address</ion-label>
    <p>[address]</p>

    <ion-button expand="block">REQUEST WITH AMOUNT</ion-button>
    <!-- should be done in top with nav, but can't go back to enter memo screen! -->
    <IonButton href="/"  expand="block">BACK</IonButton>
    <IonButton expand="block">SHARE</IonButton>
</ion-content>

@code {

    protected override void OnInitialized()
    {
        UiStateService.Title = "RECEIVE";
    }

}
